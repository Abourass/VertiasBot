{
  "name": "veritas-bot",
  "version": "1.0.0",
  "description": "A bot for managing GitHub from our core platform.",
  "author": "Abourass <abourassa@assetval.com>",
  "license": "ISC",
  "repository": "https://github.com//veritas-bot.git",
  "homepage": "https://github.com//veritas-bot",
  "bugs": "https://github.com//veritas-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "prod": "pm2-runtime start ecosystem.config.js --env production",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "@octokit/app": "^3.0.0",
    "@octokit/request": "^4.1.0",
    "@octokit/rest": "^16.27.3",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.4",
    "express-session": "^1.16.1",
    "mongoose": "^5.5.13",
    "passport": "^0.4.0",
    "probot": "^9.2.13",
    "request": "^2.88.0",
    "snyk": "^1.189.0"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "nock": "^10.0.0",
    "smee-client": "^1.1.0",
    "standard": "^12.0.1",
    "@types/express": "^4.17.0",
    "nodemon": "^1.19.1"
  },
  "nodemonConfig": {
    "events": {
      "start": "cls || clear"
    },
    "ignore": [
      "log/"
    ]
  },
  "browserslist": [
    "last 2 version",
    "> 1%",
    "not ie <= 8",
    "not dead"
  ],
  "snyk": true
}
